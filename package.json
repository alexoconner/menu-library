{
  "name": "mobile-menus",
  "version": "0.0.0",
  "description": "Collection of css3 mobile/burger menus",
  "main": "./src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rm -rf ./dist/ && mkdir ./dist",
    "watch:styles": "watch 'npm run build:styles' ./src/styles",
    "build:styles": "lessc ./src/styles/styles.less ./dist/styles.css",
    "make:styles": "lessc ./src/styles/styles.less | cleancss > ./dist/styles.css",
    "watch:js": "watchify ./src/index.js -t babelify -o ./dist/index.js -v",
    "build:js": "browserify ./src/index.js -t babelify > ./dist/index.js",
    "make:js": "browserify ./src/index.js -t babelify | uglifyjs > ./dist/index.js",
    "watch:html": "watch 'npm run build:html' ./src/",
    "build:html": "cp -r ./src/tmpl/*.html ./dist && cp ./src/index.html ./dist",
    "make:html": "cp -r ./src/tmpl/*.html ./dist && cp ./src/index.html ./dist",
    "watch": "parallelshell 'npm run watch:styles' 'npm run watch:js' 'npm run watch:html'",
    "build": "npm run build:html && npm run build:js && npm run build:styles",
    "make": "npm run build:js && npm run make:html && npm run make:styles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexoconner/mobile-menus.git"
  },
  "keywords": [
    "node",
    "css3",
    "mobile",
    "burger",
    "script",
    "npm",
    "menu",
    "es6"
  ],
  "author": "Alexander Skrabl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexoconner/mobile-menus/issues"
  },
  "homepage": "https://github.com/alexoconner/mobile-menus#readme",
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "clean-css": "^3.4.3",
    "less": "^2.5.1",
    "parallelshell": "^2.0.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.4.0",
    "classlist-polyfill": "^1.0.2"
  },
  "dependencies": {
    "bootstrap": "^3.3.6"
  }
}
